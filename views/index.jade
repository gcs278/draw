  body
    #cursors
      // The mouse pointers will be created here
    canvas#paper(width='1900', height='1000')
    script(type='text/javascript').
      $(document).ready(function() {
        var ctx = $('#paper')[0].getContext("2d");
        var img = new Image();
        img.src = "!{canvas.toDataURL()}";
        img.onload = function() {
          ctx.drawImage(img,0,0);
        }
        //- $('select[name="colorpicker"]').simplecolorpicker('selectColor', '#7bd148');
      });

    div#my_popup.well
      h1 What's your name?
      form#name_form(data-toggle="validator" role="form")
        div.form-group
          input.form-control#name_input(required maxlength="25")
        button.btn.btn-default#name_submit(type='submit') Let me in

    div#confirm_clear.well
      h1 Are you sure you want to clear?
      div#buttons
          button.btn.btn-default#yes Yes
          button.btn.btn-default#no No

    div#confirm_send.well
      div#send
          h1 You wanna send the current picture to Grant?
          div#buttons
              button.btn.btn-default#yes Yes
              button.btn.btn-default#no No
      div#sent
        h1 Grant has been sent this picture!


