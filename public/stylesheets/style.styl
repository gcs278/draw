*
  margin 0
  padding 0

html
  overflow hidden
  cursor url('images/pen.png')

body
  font 14px/1.3 'Segoe UI',Arial, sans-serif
  color #444
  background url('../images/bg.png') repeat #f0f0f0

a, a:visited
  outline none
  color #43819b

.colorpicker
  position absolute
  top 35px
  left 40px

#my_popup,#confirm_clear,#confirm_send
  -webkit-transform scale(0.8)
  -moz-transform scale(0.8)
  -ms-transform scale(0.8)
  transform scale(0.8)
  background white

#confirm_clear,#confirm_send
  -webkit-transform scale(0.8)
  -moz-transform scale(0.8)
  -ms-transform scale(0.8)
  transform scale(0.8)
  background white
  h1
    margin-bottom 20px
  #buttons
    width 50%
    margin auto auto
    .btn
      width 75px
      font-size 20px
    #yes
      margin-right 15px
      margin-left 40px
  #send
    #yes
      margin-left 100px !important

.popup_visible
  #my_popup,#confirm_clear,#confirm_send
    -webkit-transform scale(1)
    -moz-transform scale(1)
    -ms-transform scale(1)
    transform scale(1)

a
  &:hover
    text-decoration none

a:hover
  cursor pointer
#centerdiv
  position absolute
  left 50%
  top 5px

#sent
  display none

#title
  position relative
  left -50%
  font-size 35px

section, footer, header
  display block

#my_popup
  h1
    font-size 30px
  button
    float right
  input
    margin-bottom 10px

#clear
  position absolute
  top 30px
  right 20px
  
#email_button
  position absolute
  top 10px
  right 20px
  
#users
  position absolute
  bottom 100px
  left 10px
  li
    list-style-type none

.cursor_name
  margin-top 15px
  margin-left 12px
  white-space nowrap

.size_wrapper
  width 25px
  position relative
  float left

#size
  position absolute
  top 40px
  right 18%
  div
    cursor pointer

#large
  border-radius: 50%;
  width: 15px;
  height 15px
  background black

#medium
  border-radius: 50%
  margin-top 3px
  width: 10px
  height 10px
  background black

#small
  border-radius: 50%;
  margin-top 6px
  margin-left -4px
  width: 6px;
  height 6px
  background black

hgroup
  position fixed
  background-color rgba(255, 255, 255, 0.7)
  width 400px
  height 78px
  top 50%
  left 50%
  margin -120px 0 0 -225px
  text-align center
  padding 25px
  border-radius 10px
  box-shadow 0 0 3px rgba(100, 100, 100, 0.1), 0 3px 1px #D4D4D4
  color #555

h1
  font-size 22px
  padding-bottom 8px

h2
  font-size 13px
  font-weight normal
  padding-bottom 8px

h3
  font-size 12px
  font-weight normal
  font-style italic
  color #999

#cursors
  position relative
  .cursor
    position absolute
    width 15px
    height 22px
    background url('../images/pointer.png') no-repeat -4px 0

footer
  background-color #111111
  bottom 0
  box-shadow 0 -1px 2px rgba(0,0,0,0.4)
  height 45px
  left 0
  position fixed
  width 100%
  z-index 100000
  h2
    color #EEEEEE
    font-size 14px
    font-weight normal
    left 50%
    margin-left -400px
    padding 13px 0 0
    position absolute
    width 540px
    i
      font-style normal
      color #888
  a
    i
      color #ccc
      font-style normal
      b
        color #c92020
        font-weight normal

footer a.tzine,a.tzine:visited
  color #999999
  font-size 12px
  left 50%
  margin 16px 0 0 110px
  position absolute
  text-decoration none
  top 0


